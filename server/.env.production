# 生产环境配置文件
NODE_ENV=production
PORT=1919

# SSL证书配置 (暂时禁用，可在生产环境中启用)
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem
SSL_CA_PATH=./ssl/ca.pem
 

# 数据库配置
DB_PATH=./data/pdf_history.db

# 文件存储配置
UPLOAD_DIR=./uploads
PDF_DIR=./pdfs

# 清理服务配置
CLEANUP_RETENTION_HOURS=24
CLEANUP_INTERVAL_MINUTES=60
CLEANUP_AUTO_ENABLED=true

# 安全配置
CORS_ORIGIN=https://youdomain.com
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=10

# 域名配置
DOMAIN=youdomain.com
BASE_URL=https://youdomain.com

# 微信小程序配置
WECHAT_APP_ID=yourid
WECHAT_APP_SECRET=yoursec

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 性能配置
REQUEST_TIMEOUT=30000
BODY_LIMIT=50mb
