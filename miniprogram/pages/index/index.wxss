/* pages/index/index.wxss */

/* 应用图标 */
.app-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

/* 图片网格 */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f5f5f5;
  border: 2rpx solid #e0e0e0;
}

.image-preview {
  width: 100%;
  height: 100%;
}

.image-actions {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
  background: linear-gradient(to bottom, rgba(0,0,0,0.5), transparent);
}

.image-index {
  background: #1976D2;
  color: white;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.delete-btn {
  background: rgba(244, 67, 54, 0.8);
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-small {
  width: 24rpx;
  height: 24rpx;
}

.image-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.5));
  padding: 10rpx;
  text-align: center;
}

.image-size {
  color: white;
  font-size: 20rpx;
}

/* 添加更多照片 */
.add-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #1976D2;
  background: rgba(25, 118, 210, 0.05);
  color: #1976D2;
}

.add-icon {
  font-size: 60rpx;
  font-weight: 300;
  margin-bottom: 10rpx;
}

.add-text {
  font-size: 24rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-buttons .btn {
  flex: 1;
}

/* 使用说明 */
.instruction-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.instruction-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #1976D2, #1565C0);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
  padding-top: 8rpx;
}

.step-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.step-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

/* 底部提示 */
.footer-tip {
  text-align: center;
  padding: 40rpx 20rpx 20rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #999999;
}

/* 历史记录入口 */
.history-entrance {
  text-align: center;
  padding: 20rpx 60rpx 40rpx;
}

.btn-outline {
  background-color: transparent;
  border: 2rpx solid #1976D2;
  color: #1976D2;
}

.btn-outline:active {
  background-color: rgba(25, 118, 210, 0.1);
}

/* 模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  max-height: 80vh;
}

.preview-actions {
  padding: 30rpx;
  text-align: center;
}

/* 响应式调整 */
@media (max-width: 400px) {
  .image-item {
    width: calc(50% - 10rpx);
  }
}

@media (min-width: 600px) {
  .image-item {
    width: 150rpx;
    height: 150rpx;
  }
}
