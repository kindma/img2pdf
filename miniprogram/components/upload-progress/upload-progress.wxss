/* components/upload-progress/upload-progress.wxss */

.upload-progress {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.progress-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.progress-container {
  width: 80%;
  max-width: 600rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 1;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.progress-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.progress-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999999;
  border-radius: 50%;
  background: #f5f5f5;
}

.progress-body {
  padding: 30rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #666666;
}

.progress-percent {
  font-size: 32rpx;
  font-weight: bold;
  color: #1976D2;
}

.progress-bar-container {
  width: 100%;
  height: 12rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #1976D2, #42A5F5);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-detail {
  text-align: center;
}

.detail-text {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.4;
}

.progress-footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx 30rpx;
  justify-content: flex-end;
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  min-width: 120rpx;
}
